{
  "name": "fsstore",
  "displayName": "FsStore",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/fc1943s/FsStore.git"
  },
  "author": "fc1943s",
  "private": true,
  "scripts": {
    "build:fable": "dotnet tool restore && dotnet paket restore && dotnet fable",
    "watch:fable-build": "dotnet fable watch",
    "build": "yarn build:fable",
    "test-parallel": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage false --colors",
    "test-sequential": "yarn test-parallel --runInBand --detectOpenHandles",
    "test": "yarn test-parallel",
    "test-watch": "yarn test --watchAll",
    "test-build-watch": "concurrently \"npm:watch:fable-build\" \"npm:test-watch\""
  },
  "dependencies": {
    "react": "18.0.0-alpha-1314299c7-20210901",
    "react-dom": "18.0.0-alpha-1314299c7-20210901",
    "jotai": "~1.3"
  },
  "devDependencies": {
    "cross-env": "~7.0",
    "concurrently": "~6.2",
    "typescript": "~4.4",
    "ts-node": "~10.2",
    "@types/node" : "~16.7",

    "@typescript-eslint/eslint-plugin": "~4.30",
    "@typescript-eslint/parser": "~4.30",
    "eslint": "~7.32",
    "eslint-plugin-import": "~2.24",
    "eslint-plugin-jsx-a11y": "~6.4",
    "eslint-plugin-jest-dom": "~3.9",

    "jest": "~27.1",
    "jest-environment-jsdom": "~27.1",
    "ts-jest": "~27.0",
    "jest-css-modules": "~2.1",
    "@testing-library/react": "~12.0",
    "@testing-library/user-event": "~13.2",
    "@testing-library/jest-dom": "~5.14",

    "@babel/core": "~7.15",
    "@babel/preset-env": "~7.15",
    "@babel/preset-typescript": "~7.15",
    "babel-loader": "~8.2",
    "file-loader": "~6.2",
    "babel-jest": "~27.1"
  }
}
