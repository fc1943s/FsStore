{
  "name": "fsstore",
  "displayName": "FsStore",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/fc1943s/FsStore.git"
  },
  "author": "fc1943s",
  "private": true,
  "scripts": {
    "build:fable": "dotnet tool restore && dotnet paket restore && dotnet fable",
    "watch:fable-build": "dotnet fable watch",
    "build": "yarn build:fable",
    "test-parallel": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage false --colors",
    "test-sequential": "yarn test-parallel --runInBand --detectOpenHandles",
    "test": "yarn test-parallel",
    "test-watch": "yarn test --watchAll",
    "test-build-watch": "concurrently \"npm:watch:fable-build\" \"npm:test-watch\""
  },
  "dependencies": {
    "react": "18.0.0-alpha-cb11155c8-20211112",
    "react-dom": "18.0.0-alpha-cb11155c8-20211112",
    "jotai": "~1.4"
  },
  "devDependencies": {
    "cross-env": "~7.0",
    "concurrently": "~6.4",
    "typescript": "~4.4",
    "ts-node": "~10.4",
    "@types/node" : "~16.11",

    "@typescript-eslint/eslint-plugin": "~5.3",
    "@typescript-eslint/parser": "~5.3",
    "eslint": "~8.2",
    "eslint-plugin-import": "~2.25",
    "eslint-plugin-jsx-a11y": "~6.5",
    "eslint-plugin-jest-dom": "~3.9",

    "jest": "~27.3",
    "jest-environment-jsdom": "~27.3",
    "ts-jest": "~27.0",
    "jest-css-modules": "~2.1",
    "@testing-library/react": "~12.1",
    "@testing-library/user-event": "~13.5",
    "@testing-library/jest-dom": "~5.15",

    "@babel/core": "~7.16",
    "@babel/preset-env": "~7.16",
    "@babel/preset-typescript": "~7.16",
    "babel-loader": "~8.2",
    "file-loader": "~6.2",
    "babel-jest": "~27.3"
  }
}
